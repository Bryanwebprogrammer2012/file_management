myfile = open("poem.txt", 'r')
lines = 0
words = 0
characters = 0
for line in myfile:
    wordslist = line.split()
    lines = lines + 1
    words = words + len(wordslist)
    characters = characters + len(line)
print("\nHas ",lines," lines")
print("\nHas ",words," words")
print("\nHas ",characters," characters")

myfile = open("poem.txt","r")
for line in myfile:
  print(line)
myfile.close
